            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:clickable="true"
            style="@style/Widget.MaterialComponents.Button"/>

        <!-- Button to Add Selected Cards -->
