    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RandomizeWorkoutActivity">

    <!-- Tab (Instructions) -->
    <TextView
        android:id="@+id/tabTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Click Here For Instructions"
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:gravity="center"
        android:padding="16dp"
        android:background="#87CEEB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:clickable="true"/>

    <!-- Full Description Area -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Each category has a full set of possible options for that particular body part. Selet the category based on which body part/parts you want to train. NOTE: one category could have more than 5 different exercises. Have Fun!!"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="16dp"
        android:background="#87CEEB"
        app:layout_constraintTop_toBottomOf="@id/tabTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <!-- Grid Layout with Card Views -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLayout">

        <!-- Card View 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="20dp"
            android:layout_margin="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Name of the Card -->
                <TextView
                    android:id="@+id/cardNameTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Chest"/>

                <!-- Image -->
                <ImageView
                    android:id="@+id/cardImageView1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chest"/>

                <!-- Check Mark -->
                <ImageView
                    android:id="@+id/checkMarkImageView1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/check_mark"
                    android:visibility="gone"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

